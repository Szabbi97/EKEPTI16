<?xml version="1.0" encoding="UTF-8"?>
<rulesfile version="1.0" name="Default file types recognizers" description="sss"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="./scanner.xsd"
>
